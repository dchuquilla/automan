
<div class="row column">
  <h1 class="text-headline">Mis autos</h1>
  <table class="responsive-card-table unstriped">
    <thead>
      <tr>
        <th>Placa</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Tipo</th>
        <th>Km Actual</th>
        <th>Km semanal</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td data-label="Placa"><%= car.plate %></td>
          <td data-label="Marca"><%= car.brand %></td>
          <td data-label="Modelo"><%= car.model %></td>
          <td data-label="Tipo"><%= car.car_type %></td>
          <td data-label="Km Actual"><%= car.current_km_estimated.round %></td>
          <td data-label="Km semanal"><%= car.week_km.round %></td>
          <td>
            <%= link_to select_car_path(car), class: "floating-action button success" do %>
              <i class="material-icons">build</i>
            <% end %>
            <%= link_to car, class: "floating-action button primary" do %>
              <i class="material-icons">search</i>
            <% end %>
            <%= link_to edit_car_path(car), class: "floating-action button secondary" do %>
              <i class="material-icons">edit</i>
            <% end %>
            <%= link_to car, class: "floating-action button alert", method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <i class="material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to new_car_path, class: "floating-action button primary main show-for-medium" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>

<div class="mobile-bottom-bar hide-for-medium">
  <%= link_to new_car_path, class: "footer-link button hollow" do %>
    <i class="material-icons">add</i><br>
    <small>Agregar auto</small>
  <% end %>
</div>