<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Plate</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Current km</th>
      <th>Car type</th>
      <th>Week km</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.plate %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.current_km %></td>
        <td><%= car.car_type %></td>
        <td><%= car.week_km %></td>
        <td><%= car.owner %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

