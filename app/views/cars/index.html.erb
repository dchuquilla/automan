
<div class="row column">
  <h1>Mis autos</h1>
  <table>
    <thead>
      <tr>
        <th>Placa</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Tipo</th>
        <th>Km Actual</th>
        <th>Km semanal</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.plate %></td>
          <td><%= car.brand %></td>
          <td><%= car.model %></td>
          <td><%= car.current_km %></td>
          <td><%= car.car_type %></td>
          <td><%= car.week_km %></td>
          <td><%= link_to 'Seleccionar', select_car_path(car) %></td>
          <td><%= link_to 'Detalles', car %></td>
          <td><%= link_to 'Editar', edit_car_path(car) %></td>
          <td><%= link_to 'Eliminar', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Agregar auto', new_car_path %>
</div>
