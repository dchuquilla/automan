<p id="notice"><%= notice %></p>

<h1>Maintenance Histories</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Estimated km</th>
      <th>Scheduled date</th>
      <th>Review km</th>
      <th>Review date</th>
      <th>Provider</th>
      <th>Cost</th>
      <th>Notified</th>
      <th>Car</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintenance_histories.each do |maintenance_history| %>
      <tr>
        <td><%= maintenance_history.status %></td>
        <td><%= maintenance_history.estimated_km %></td>
        <td><%= maintenance_history.scheduled_date %></td>
        <td><%= maintenance_history.review_km %></td>
        <td><%= maintenance_history.review_date %></td>
        <td><%= maintenance_history.provider %></td>
        <td><%= maintenance_history.cost %></td>
        <td><%= maintenance_history.notified %></td>
        <td><%= maintenance_history.car %></td>
        <td><%= link_to 'Show', maintenance_history %></td>
        <td><%= link_to 'Edit', edit_maintenance_history_path(maintenance_history) %></td>
        <td><%= link_to 'Destroy', maintenance_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

